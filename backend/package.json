{
  "name": "inventory-erp-backend",
  "version": "1.0.0",
  "description": "Backend API for Inventory ERP System",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc && prisma generate",
    "start": "node dist/server.js",
    "migrate": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "migrate:reset": "prisma migrate reset",
    "seed": "echo 'Seed disabled - use npm run seed:force to re-enable'",
    "seed:force": "tsx src/db/seed.ts",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "test:db": "node scripts/test-setup.js",
    "test:server": "tsx src/test-server.ts",
    "smoke:accounting": "tsx scripts/accounting-posting-smoke.ts",
    "smoke:accounting:final": "tsx scripts/final-accounting-workflow-test.ts",
    "smoke:accounting:reports": "tsx scripts/final-financial-reports-ledgers-test.ts",
    "smoke:accounting:master": "tsx scripts/accounting_master_test.ts",
    "test:formulas": "tsx scripts/simple_formula_test.ts",
    "verify": "node scripts/verify-setup.js",
    "clear-data": "tsx scripts/clear-all-data.ts",
    "verify-empty": "tsx scripts/verify-empty.ts",
    "cleanup:test-data": "tsx scripts/cleanup-test-data.ts",
    "delete:invoices": "tsx scripts/delete-all-invoices.ts",
    "cleanup:test-accounts": "tsx scripts/cleanup-test-accounts.ts",
    "delete:accounts": "tsx scripts/delete-all-accounts.ts",
    "seed:screenshot-accounts": "tsx scripts/seed-screenshot-accounts.ts",
    "import:items": "tsx src/scripts/import-items-from-json.js",
    "import:stock": "tsx src/scripts/add-initial-stock.js",
    "clean:subcategories": "tsx src/scripts/clean-subcategory-names.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^12.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "form-data": "^4.0.5",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/form-data": "^2.2.1",
    "@types/node": "^20.10.6",
    "@types/node-fetch": "^2.6.13",
    "prisma": "^5.7.1",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3"
  }
}